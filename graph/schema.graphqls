# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Sensor {
  id: ID!
  name: String!
  description: String
}

type AlarmSystem {
  id: ID!
  name: String!
  description: String
  sensors: [ Sensor! ]!
}

type Home {
  id: ID!
  name: String!
  description: String
  alarmSystem: AlarmSystem
}

type Query {
  homes: [Home!]!
  home(input: ID!): Home
}

input NewHome {
  name: String!
  description: String
}

type Mutation {
  createHome(input: NewHome!): Home!
}
